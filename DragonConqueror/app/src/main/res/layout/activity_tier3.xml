<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tier3">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/reflecting_pool"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-89dp"></ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\t\tTIER 3"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/white"
        android:textSize="42dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <TextView
        android:id="@+id/tvVariableec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Score"
        android:gravity="left"
        android:text="ExtraSpeed:"
        android:textColor="#FFFF"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvVariableec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Score"
        android:gravity="left"
        android:text="300"
        android:textColor="#FFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom">

        <ProgressBar
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/simpleProgressBarc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:max="10"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="0"/>

        <ImageButton
            android:id="@+id/imagebuttonbufffc"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/dragon_king_blue"
            android:clickable="true"
            android:contentDescription="Boton central"
            android:focusable="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageButton
            android:id="@+id/imagebuttonbufff2c"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/boss_sea_calamity_urmica"
            android:clickable="true"
            android:contentDescription="Boton central"
            android:focusable="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </ImageButton>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>