<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".empty_activity">
<ImageView
    android:id="@+id/fondomenuagua"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_dungeon"></ImageView>
<ImageView
    android:id="@+id/fondobatallaagua"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent"
    android:background="@drawable/reflecting_pool"></ImageView>
<ImageView
    android:id="@+id/fondoprev"
    android:layout_width="match_parent"
    android:visibility="visible"
    android:layout_height="match_parent"
    android:background="@drawable/building_5"></ImageView>

    <TextView
        android:id="@+id/ronda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="RONDA 1"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <LinearLayout
        android:id="@+id/prevdungeons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/thunderdungeon"
                android:clickable="true"
                android:layout_gravity="left"
                android:contentDescription="dungeon"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="60dp"
                android:focusable="true"
                android:layout_width="match_parent"
                android:background="@drawable/titans_thunder_dynamo"
                android:layout_weight="1"
                android:layout_height="match_parent"></ImageButton>


            <ImageButton
                android:id="@+id/waterdungeon"
                android:background="@drawable/dragon_king_blue"
                android:clickable="true"
                android:contentDescription="dungeon"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="28dp"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>
            <ImageButton
                android:id="@+id/icedungeon"
                android:clickable="true"
                android:layout_marginRight="0dp"
                android:layout_marginTop="36dp"
                android:contentDescription="dungeon"
                android:layout_marginBottom="36dp"
                android:background="@drawable/boss_ice_titan_demeres"
                android:focusable="true"
                android:layout_marginLeft="52dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/earthdungeon"
                android:clickable="true"
                android:background="@drawable/earth_gemstone_golem"
                android:focusable="true"
                android:contentDescription="dungeon"
                android:layout_marginRight="4dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"></ImageButton>
            <ImageButton
                android:id="@+id/plantdungeon"
                android:clickable="true"
                android:layout_marginTop="12dp"
                android:focusable="true"
                android:contentDescription="dungeon"
                android:background="@drawable/boss_nature_titan_tellia"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"></ImageButton>
            <ImageButton
                android:id="@+id/firedungeon"
                android:background="@drawable/fire_lava_worm"
                android:clickable="true"
                android:layout_marginTop="12dp"
                android:contentDescription="dungeon"
                android:layout_marginLeft="4dp"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"></ImageButton>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/batalla"
        android:visibility="gone"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="bottom|center"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/simpleProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="1000"
                android:padding="20dp"
                android:progress="0"
                android:progressBackgroundTint="#FFFFFF"
                android:progressTint="#2E8332" />
            <ImageView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fire_wisp"></ImageView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="55"
        android:gravity="bottom|center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/simpleProgressBar2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:max="10"
            android:padding="20dp"
            android:progress="0"
            android:progressBackgroundTint="#FFFFFF"
            android:progressTint="#113512" />
        <ImageView
            android:id="@+id/enemy1"
            android:visibility="visible"
            android:layout_width="170dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:background="@drawable/slime_wateri"></ImageView>
        <ImageView
            android:id="@+id/enemy2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="bottom"
            android:padding="25dp"
            android:layout_marginTop="64dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/atk1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/slash"
                    android:contentDescription="button atack"
                    android:layout_weight="1"></Button>
                <Button
                    android:id="@+id/atk2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/storm"
                    android:contentDescription="button atack"
                    android:layout_weight="1"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/atk3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/heal"
                    android:contentDescription="button atack"
                    android:layout_weight="1"></Button>
                <Button
                    android:id="@+id/atk4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/run"
                    android:contentDescription="button atack"
                    android:layout_weight="1"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/menuagua"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <Button
                android:id="@+id/dungeon1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="1. Rio de las carpas"
                android:textColor="#CDC7C7"
                android:textSize="26sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="#0B0F22"></Button>
            <Button
                android:id="@+id/dungeon2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="2. Costa Celeste"
                android:textColor="#CDC7C7"
                android:textSize="26sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="#0B0F22"     >

            </Button>
            <Button
                android:id="@+id/dungeon3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="3. Barrera Coralina"
                android:textColor="#CDC7C7"
                android:textSize="26sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="#0B0F22"></Button>
            <Button
                android:id="@+id/dungeon4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="4. Fosa de los cadaveres"
                android:textColor="#CDC7C7"
                android:textSize="26sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="#0B0F22"></Button>
            <Button
                android:id="@+id/dungeon5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="5. Ruinas del arca"
                android:textColor="#CDC7C7"
                android:textSize="26sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="#0B0F22"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="6. Cadaver del KRAKEN PRIMORDIAL"
                android:textColor="#CDC7C7"
                android:textSize="26sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:id="@+id/dungeon6"
                android:backgroundTint="#0B0F22"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="7. Guarida del KRAKEN DESPIADADO"
                android:textColor="#CDC7C7"
                android:textSize="26sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:id="@+id/dungeon7"
                android:backgroundTint="#0B0F22"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="8. Trono del KRAKEN DESPIADADO"
                android:textColor="#CDC7C7"
                android:textSize="26sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:id="@+id/dungeon8"
                android:backgroundTint="#0B0F22"></Button>
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <Button
                android:id="@+id/dungeon1f"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="1. LLANERA INFERNAL"
                android:textColor="#CDC7C7"
                android:textSize="32sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/dungeon2f"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="2. CAMINO VOLCANICO"
                android:textColor="#CDC7C7"
                android:textSize="32sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="@color/black"     >

            </Button>
            <Button
                android:id="@+id/dungeon3f"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="3. RUINAS DEL TEMPLO DEL FUEGO"
                android:textColor="#CDC7C7"
                android:textSize="32sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/dungeon4f"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="4. PISCINA DE LAVA"
                android:textColor="#CDC7C7"
                android:textSize="32sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/dungeon5f"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="5. ESTALACTITAS DE MAGMA"
                android:textColor="#CDC7C7"
                android:textSize="32sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="6. CADAVER DEL ANTIGUO REY DRAGON"
                android:textColor="#CDC7C7"
                android:textSize="32sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:id="@+id/dungeon6f"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="7. TESORO DEL DRAGON INFERNAL"
                android:textColor="#CDC7C7"
                android:textSize="32sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:id="@+id/dungeon7f"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:text="8.TRONO DEL DRAGON INFERNAL"
                android:textColor="#CDC7C7"
                android:textSize="32sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:id="@+id/dungeon8f"
                android:backgroundTint="@color/black"></Button>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginEnd="30dp"
        android:gravity="right|bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/waifu"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/celestial_beatrix"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"></ImageView>
    </LinearLayout>
    <ImageButton
        android:id="@+id/resum"
        android:contentDescription="asd"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_marginTop="160dp"
        android:visibility="gone"
        android:focusable="true"
        android:layout_height="match_parent"
        android:background="@drawable/maple_leaf"></ImageButton>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="top"
        android:id="@+id/victory"
        android:visibility="visible"
        android:layout_marginTop="360dp"
        android:text="HOLA"
        android:orientation="vertical"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView
            android:id="@+id/victoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VICTORY"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="58sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/extrastats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="36sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:gravity="center_horizontal"></TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>